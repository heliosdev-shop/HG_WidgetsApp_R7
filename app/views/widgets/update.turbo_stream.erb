<%= turbo_stream.replace "widget__#{@widget.id}" do %>
  <%= render partial: 'line', locals: {widget: @widget  } %>
<% end %>

<%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
